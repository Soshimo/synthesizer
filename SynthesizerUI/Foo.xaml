<UserControl x:Class="SynthesizerUI.Foo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthesizerUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:KnobControl 
            VerticalAlignment="Top" 
            Value="{Binding Path=Value, Mode=TwoWay}" 
            Margin="0,20,0,0" 
            Maximum="1200"
            Minimum="-1200"
            Step="10"
            Width="64" 
            Height="64">
            <local:KnobControl.SpriteSheet>
                <local:SpriteSheet Source="/Assets/LittlePhatty.png" Orientation="Vertical" Cells="101">
                    <local:SpriteSheet.Range>
                        <local:IntegerRange End="100" />
                    </local:SpriteSheet.Range>
                </local:SpriteSheet>
            </local:KnobControl.SpriteSheet>
        </local:KnobControl>
    </Grid>
</UserControl>
