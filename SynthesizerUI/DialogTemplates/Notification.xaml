<UserControl x:Class="SynthesizerUI.DialogTemplates.Notification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding Path=NotificationViewModel, Source={StaticResource ViewModelLocator}}"
             xmlns:local="clr-namespace:SynthesizerUI.DialogTemplates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="This is a Notification" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" FontFamily="/Fonts/#"></TextBlock>
        <Button Width="90" Click="Button_Click">Click Me!</Button>
    </StackPanel>
</UserControl>
