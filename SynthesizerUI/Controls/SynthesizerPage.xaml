                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Border Style="{StaticResource FadingBorderStyle}" Margin="0 4">
                                        <Label Style="{StaticResource SynthLabelStyle}"
                                                   Content="{Binding Path=MasterDrive}" />
                                    </Border>

                                    <Grid Grid.Row="1">

                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <synthesizerUi:KnobControl Grid.Row="0" VerticalAlignment="Top"
                                                               Value="{Binding Path=MasterDrive, Mode=TwoWay}"
                                                               Margin="0,2,0,0" Width="64" Height="64">
                                            <synthesizerUi:KnobControl.SpriteSheet>
                                                <dependencyObjects:SpriteSheet Source="/Assets/LittlePhatty.png"
                                                        Orientation="Vertical" Cells="101">
                                                    <dependencyObjects:SpriteSheet.Range>
                                                        <dependencyObjects:IntegerRange End="100" />
                                                    </dependencyObjects:SpriteSheet.Range>
                                                </dependencyObjects:SpriteSheet>
                                            </synthesizerUi:KnobControl.SpriteSheet>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="KnobChanged">
                                                    <i:InvokeCommandAction Command="{Binding KnobChangedCommand}" CommandParameter="MasterDrive" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>

                                        </synthesizerUi:KnobControl>

                                        <Label Grid.Row="1" Style="{DynamicResource MaterialDesignLabel}"
                                               HorizontalAlignment="Center"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource LabelBrush}"
                                               Content="drive" />

                                    </Grid>

                                </Grid>
                                <Grid Grid.Column="1" Margin="0, 10, 0, 0" VerticalAlignment="Bottom" HorizontalAlignment="Center">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Border
                                            Style="{StaticResource FadingBorderStyle}" Margin="0 4">
                                        <Label Style="{StaticResource SynthLabelStyle}"
                                                   Content="{Binding Path=MasterReverb}" />
                                    </Border>


                                    <StackPanel Grid.Row="1">
                                        <synthesizerUi:KnobControl VerticalAlignment="Top"
                                                               Value="{Binding Path=MasterReverb, Mode=TwoWay}"
                                                               Margin="0,2,0,0" Width="64" Height="64">
                                            <synthesizerUi:KnobControl.SpriteSheet>
                                                <dependencyObjects:SpriteSheet Source="/Assets/LittlePhatty.png"
                                                        Orientation="Vertical" Cells="101">
                                                    <dependencyObjects:SpriteSheet.Range>
                                                        <dependencyObjects:IntegerRange End="100" />
                                                    </dependencyObjects:SpriteSheet.Range>
                                                </dependencyObjects:SpriteSheet>
                                            </synthesizerUi:KnobControl.SpriteSheet>

                                        </synthesizerUi:KnobControl>

                                        <Label Style="{DynamicResource MaterialDesignLabel}"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource LabelBrush}"
                                                   Content="reverb" />

                                    </StackPanel>

                                </Grid>
                                <Grid Grid.Column="2" Margin="0, 10, 0, 0" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Border
                                            Style="{StaticResource FadingBorderStyle}" Margin="0 4">
                                        <Label Style="{StaticResource SynthLabelStyle}"
                                                   Content="{Binding Path=MasterVolume}" />
                                    </Border>

                                    <StackPanel Grid.Row="1">

                                        <synthesizerUi:KnobControl
                                                VerticalAlignment="Top"
                                                Value="{Binding Path=MasterVolume, Mode=TwoWay}"
                                                Margin="0,2,0,0"
                                                Step="10"
                                                Width="64"
                                                Height="64">
                                            <synthesizerUi:KnobControl.SpriteSheet>
                                                <dependencyObjects:SpriteSheet Source="/Assets/LittlePhatty.png"
                                                        Orientation="Vertical" Cells="101">
                                                    <dependencyObjects:SpriteSheet.Range>
                                                        <dependencyObjects:IntegerRange End="100" />
                                                    </dependencyObjects:SpriteSheet.Range>
                                                </dependencyObjects:SpriteSheet>
                                            </synthesizerUi:KnobControl.SpriteSheet>
                                        </synthesizerUi:KnobControl>

                                        <Label Style="{DynamicResource MaterialDesignLabel}"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource LabelBrush}"
                                                   Content="volume" />

                                    </StackPanel>
                                </Grid>
                                <StackPanel Grid.Column="3" Margin="0, 20, 0, 0" HorizontalAlignment="Center">

                                    <ComboBox Style="{StaticResource MaterialDesignFilledComboBox}"
                                                  Margin="0, 10, 0, 0"
                                                  materialDesign:ColorZoneAssist.Mode="Dark"
                                                  materialDesign:HintAssist.Hint="midi_in"
                                                  materialDesign:TextFieldAssist.HasClearButton="True"
                                                  ItemsSource="{Binding AvailableDevices}"
                                                  SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"
                                                  VerticalAlignment="Top"
                                                  Width="150"
                                                  HorizontalAlignment="Left"
                                                  FontFamily="/Fonts/#Syncopate"
                                                  ToolTipService.ToolTip="Please select a midi device.">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                        Text="{Binding Converter={StaticResource ObjectToDisplayValueConverter}, ConverterParameter=Name}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding MidiDeviceChangedCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>

                                    <ComboBox Style="{StaticResource MaterialDesignFilledComboBox}"
                                                  Margin="0, 10, 0, 0"
                                                  materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueLightBrush}"
                                                  materialDesign:ColorZoneAssist.Mode="Dark"
                                                  materialDesign:HintAssist.Hint="kbd_oct"
                                                  ItemsSource="{Binding KeyboardOctaves}"
                                                  SelectedItem="{Binding KeyboardOctave, Mode=TwoWay}"
                                                  VerticalAlignment="Top"
                                                  Width="150"
                                                  HorizontalAlignment="Left"
                                                  FontFamily="/Fonts/#Syncopate"
                                                  ToolTipService.ToolTip="Please select an octave.">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                        Text="{Binding Converter={StaticResource ObjectToDisplayValueConverter}, ConverterParameter=Display}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>



                </Border>


                <local:PianoKeyboardControl Grid.Row="1" KeyPressed="PianoKeyboardControl_OnKeyPressed"
                                               KeyReleased="PianoKeyboardControl_OnKeyReleased"
                                               CurrentNote="{Binding CurrentNote}"
                                               HorizontalAlignment="Center">
                </local:PianoKeyboardControl>

            </Grid>

        </Grid>

    </Grid>
</Page>
